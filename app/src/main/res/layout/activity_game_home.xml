<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_photo"
    android:visibility="visible"
    tools:context=".GameHome">

    <ImageView
        android:id="@+id/AsylumEscape"
        android:layout_width="397dp"
        android:layout_height="164dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="#12575757"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title"
        android:contentDescription="@string/asylum_escape_title" />

    <Button
        android:id="@+id/reflex_escape"
        android:layout_width="201dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/re"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AsylumEscape"
        android:onClick="ReflexEscape"/>

    <Button
        android:id="@+id/mirrored_cards"
        android:layout_width="201dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/mc"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reflex_escape"
        android:onClick="MirroredCards"/>

    <Button
        android:id="@+id/leaderboards"
        android:layout_width="201dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/leaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mirrored_cards"
        android:onClick="Leaderboard"/>

</androidx.constraintlayout.widget.ConstraintLayout>