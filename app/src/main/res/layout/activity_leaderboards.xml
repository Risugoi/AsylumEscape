<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_photo"
    tools:context=".Leaderboards">

    <ImageView
        android:id="@+id/AsylumEscape"
        android:layout_width="397dp"
        android:layout_height="164dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="#12575757"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/title" />

    <ImageView
        android:id="@+id/leaderboards"
        android:layout_width="246dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="#00454545"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AsylumEscape"
        app:srcCompat="@drawable/leaderboards_title" />

    <Button
        android:id="@+id/reflex_escape"
        android:layout_width="201dp"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/re"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/leaderboards"
        android:onClick="RELeaderboards"/>

    <Button
        android:id="@+id/mirrored_cards"
        android:layout_width="201dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/mc"
        android:onClick="MCleaderboards"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reflex_escape" />

    <Button
        android:id="@+id/back"
        android:layout_width="196dp"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/home"
        android:onClick="home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mirrored_cards" />

</androidx.constraintlayout.widget.ConstraintLayout>